<%- include('cabecalho2') -%>

<section class="contact1" style="padding: 50px 0;">
  <div class="container-contact1">
    <div class="contact1-pic js-tilt" data-tilt>
      <img src="/assets/img/doacao.png" alt="IMG">
    </div>

    <form action="/disciplina/upload" method="POST" class="contact1-form validate-form" enctype="multipart/form-data">
      <span class="contact1-form-title">
        Compartilhe o seu Material Didádico:
      </span>

      <div class="wrap-input1">
        <label class="form-label">Selecione a Disciplina</label>
        <select name="disciplinaId" class="form-select" required>
          <option value="" hidden>Selecione a Matéria</option>
          <% if (typeof disciplinas !== 'undefined' && disciplinas.length) { %>
            <% disciplinas.forEach(function(d) { %>
              <option value="<%= d._id %>"><%= d.titulo || d.conteudo || d.nome || 'Disciplina' %></option>
            <% }) %>
          <% } else { %>
            <option value="">Nenhuma disciplina cadastrada</option>
          <% } %>
        </select>
      </div>

      <div class="wrap-input1">
        <input class="input1" type="text" name="titulo" placeholder="Título" required>
      </div>

      <div class="wrap-input1">
        <input type="file" name="material" accept=".pdf,.ppt,.pptx" required>
        <label style="color:#666666">Material Didádico (PDF ou PPT)</label>
      </div>

      <div class="container-contact1-form-btn">
        <button class="contact1-form-btn" type="submit">
          <span>Enviar</span>
        </button>
      </div>

      <p class="small fw-bold mt-2 pt-1 mb-0">Deseja visualizar os conteúdos? <a href="/conteudo" class="link-danger">Conteúdos</a></p>
    </form>
  </div>
</section>

