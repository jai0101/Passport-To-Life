<%- include('cabecalho2') -%>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
  <link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="vendor/animate/animate.css">
  <link rel="stylesheet" href="vendor/select2/select2.min.css">
  <link rel="stylesheet" href="css/style.css">

  <style>
    body {
      background: linear-gradient(135deg, #fdf8f4, #f5ece5);
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .card {
      border: none;
      border-radius: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card img {
      width: 100%;
      height: auto;
      border-top-left-radius: 20px;
      border-bottom-left-radius: 20px;
    }

    .form-control, textarea {
      border-radius: 10px;
      border: 1px solid #d2b48c;
      padding: 10px 15px;
      transition: all 0.3s ease;
    }

    .form-control:focus, textarea:focus {
      border-color: #8b4513;
      box-shadow: 0 0 0 0.2rem rgba(139, 69, 19, 0.25);
    }

    /* Título e botão marrom */
    .titulo-marrom {
      color: #8b4513;
    }

    .btn-marrom {
      background-color: #8b4513;
      border: none;
      border-radius: 10px;
      padding: 10px 30px;
      font-weight: 600;
      color: #fff;
      transition: all 0.3s ease;
    }

    .btn-marrom:hover {
      background-color: #6f3a0f;
      transform: scale(1.03);
    }

    .link-danger {
      font-weight: 600;
      text-decoration: none;
      color: #8b4513 !important;
    }

    .link-danger:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <div class="container py-5">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-10 col-lg-8">
        <div class="card flex-md-row">
          <div class="col-md-5 p-0">
            <img src="assets/img/doacao.png" alt="Imagem Doação" class="img-fluid">
          </div>
          <div class="col-md-7 p-5">
            <h4 class="mb-4 fw-bold titulo-marrom">
              Deixe sua avaliação sobre o site e sugira melhorias:
            </h4>

            <form action="/enviadoacao" method="POST">
              <div class="mb-3">
                <input type="text" class="form-control" name="nome" placeholder="Nome" required>
              </div>

              <div class="mb-3">
                <input type="text" class="form-control" name="pix" placeholder="Chave Pix" required>
              </div>

              <div class="mb-3">
                <textarea class="form-control" name="mensagem" rows="3" placeholder="Descrição" required></textarea>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn-marrom">
                  <i class="fa fa-paper-plane me-2"></i> Enviar
                </button>
              </div>

              <p class="small fw-bold mt-4 mb-0 text-center">
                Deseja realizar uma doação? 
                <a href="/mensagem" class="link-danger">Mensagens</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="vendor/select2/select2.min.js"></script>
  <script src="vendor/tilt/tilt.jquery.min.js"></script>
  <script>
    $('.js-tilt').tilt({ scale: 1.05 })
  </script>

  <%- include('rodape') -%>
</body>
