<%- include('cabecalho2') -%>

<!-- O chat (ou o pop-up de login) ser치 renderizado se o template for inclu칤do -->

<!-- Estrutura do Chat Flutuante para Usu치rios Logados -->
<% if (Admin) { %>
<!-- 칈cone do chat -->
<div id="chat-icon">游눫</div>

<!-- Janela de chat (escondida inicialmente) -->
<div id="chat-window" style="display: none;">
  <!-- 츼rea de escolha de apelido (vis칤vel inicialmente) -->
  <div id="nickname-area">
    <p>Escolha seu apelido para o chat:</p>
    <input id="nickname-input" placeholder="Digite seu apelido..." value="<%= Admin.username || Admin.nome1 %>" autocomplete="off"/>
    <button id="save-nickname-btn">Salvar Apelido</button>
  </div>

  <!-- 츼rea de mensagens (escondida inicialmente) -->
  <div id="messages-area" style="display: none;">
    <ul id="messages"></ul>
    <form id="chat-form">
      <input id="chat-input" placeholder="Digite sua mensagem..." autocomplete="off"/>
      <button type="submit">Enviar</button>
    </form>
  </div>
</div>

<!-- Define vari치veis globais para o chat.js -->
<script>
  window.initialNickname = "<%= Admin.username || Admin.nome1 %>";
  window.loggedIn = true;
</script>

<!-- Scripts do Chat -->
<!-- O socket.io.js deve ser carregado antes do chat.js -->
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/js/chat.js"></script>

<% } else { %>
<!-- Estrutura do Pop-up de Login para Usu치rios Deslogados -->
<div id="chat-icon-login">游눫</div>

<div id="login-popup" style="display: none;">
  <div class="popup-header">
    <span>Bem-vindo ao Chat do Passaport to Life!</span>
    <button id="close-popup-btn">X</button>
  </div>
  <div class="popup-body">
    <p>O chat em tempo real est치 dispon칤vel apenas para usu치rios logados.</p>
    <a href="/login" class="login-button">Fazer Login</a>
  </div>
</div>

<!-- Script para controlar o pop-up de login -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const chatIconLogin = document.getElementById('chat-icon-login');
    const loginPopup = document.getElementById('login-popup');
    const closePopupBtn = document.getElementById('close-popup-btn');

    if (chatIconLogin && loginPopup) {
      chatIconLogin.addEventListener('click', () => {
        // Usa 'flex' para exibir o pop-up
        loginPopup.style.display = 'flex';
      });

      closePopupBtn.addEventListener('click', () => {
        loginPopup.style.display = 'none';
      });
    }
  });
</script>

<% } %>

